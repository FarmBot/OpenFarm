<div class="row">
  <div class="small-12 columns">
    <div class="row">
      <div class="large-8 medium-10 small-12 small-centered columns">
        <h1>Need to make some changes?</h1>
        <%= render 'devise/shared/user_form' %>
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'button submit' %></p>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
